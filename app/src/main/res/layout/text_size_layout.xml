<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/text_size_small_btn"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/text_size_left"
        android:text="@string/text_size_small"
        android:focusable="true"
        />
    <Button
        android:id="@+id/text_size_middle_btn"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/text_size_middle"
        android:layout_marginStart="-1dp"
        android:text="@string/text_size_middle"
        app:layout_constraintLeft_toRightOf="@id/text_size_small_btn"
        android:focusable="true"/>
    <Button
        android:id="@+id/text_size_large_btn"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="-1dp"
        android:background="@drawable/text_size_right"
        android:text="@string/text_size_large"
        app:layout_constraintLeft_toRightOf="@id/text_size_middle_btn"
        android:focusable="true"/>
</LinearLayout>